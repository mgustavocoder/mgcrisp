<!doctype html>
<html lang="pt-br">
	<head>
	    {{! Document Settings }}
	    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
	    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	    {{! Page Meta }}
	    <title>{{meta_title}}</title>
		<link rel="stylesheet" type="text/css" href="{{asset '/styles/mgcrisp.css'}}" lazyload>
		{{! Responsive Meta Tags }}
	    <meta name="HandheldFriendly" content="True" />
	    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
		{{{block "head"}}}
	    {{ghost_head}}


		<style>
			/* https://fonts.googleapis.com/css?family=Bree+Serif */
			/* latin-ext */
			@font-face {
			font-family: 'Bree Serif';
			font-style: normal;
			font-weight: 400;
			src: url(https://fonts.gstatic.com/s/breeserif/v10/4UaHrEJCrhhnVA3DgluA96Tp56N1.woff2) format('woff2');
			unicode-range: U+0100-024F, U+0259, U+1E00-1EFF, U+2020, U+20A0-20AB, U+20AD-20CF, U+2113, U+2C60-2C7F, U+A720-A7FF;
			font-display: swap;
			}
			/* latin */
			@font-face {
			font-family: 'Bree Serif';
			font-style: normal;
			font-weight: 400;
			src: url(https://fonts.gstatic.com/s/breeserif/v10/4UaHrEJCrhhnVA3DgluA96rp5w.woff2) format('woff2');
			unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
			font-display: swap;
			}
		</style>

	</head>
	<body class="{{body_class}}">

		<header id="header" {{#if @site.cover_image}}style="background-image: url('{{@site.cover_image}}')"{{/if}}>
			{{#if @site.logo}}<a id="logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}" /></a>{{/if}}
			{{> follow}}
			{{navigation}}
		</header>
		<main id="content">
			{{{body}}}
		</main>
		<hr>
		<footer id="footer">
			<h3>Social</h3>
			{{> follow-footer}}
			<h3>Contato</h3>
			{{> contact-footer}}
			<hr>
			<section id="footer-message">&copy; {{date format='YYYY'}} {{@site.title}}</section>
		</footer>
	{{ghost_foot}}
	</body>
</html>
